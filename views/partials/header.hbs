<script>
  document.addEventListener('DOMContentLoaded', () => {
    const themeToggle = document.getElementById('theme-toggle');
    const themeIcon = document.getElementById('theme-icon');
    const themeText = document.getElementById('theme-text');

    // Function to update the toggle appearance
    function updateToggleAppearance(isDarkMode) {
      if (isDarkMode) {
        themeIcon.classList.replace('fa-moon-o', 'fa-sun-o');
        themeText.textContent = '';
      } else {
        themeIcon.classList.replace('fa-sun-o', 'fa-moon-o');
        themeText.textContent = '';
      }
    }

    // Function to set the theme
    function setTheme(isDarkMode) {
      if (isDarkMode) {
        document.body.classList.add('dark-mode');
        localStorage.setItem('theme', 'dark');
      } else {
        document.body.classList.remove('dark-mode');
        localStorage.setItem('theme', 'light');
      }
      updateToggleAppearance(isDarkMode);
    }

    // Apply the stored theme on page load
    const storedTheme = localStorage.getItem('theme');
    if (storedTheme === 'dark') {
      setTheme(true);
    } else {
      setTheme(false);
    }

    // Toggle theme when the button is clicked
    themeToggle.addEventListener('click', function (event) {
      event.preventDefault();
      const isDarkMode = !document.body.classList.contains('dark-mode');
      setTheme(isDarkMode);
    });
  });

</script>
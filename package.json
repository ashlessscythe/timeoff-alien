  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "chai": "^4.2.0",
    "clean-css-cli": "^5.6.3",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-mocha": "^10.2.0",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "i18n": "^0.15.1",
    "mocha": "^6.2.2",
    "node-sass": "^8.0.0",
    "prettier": "1.17.0",
    "prisma": "^5.21.0",
    "request-promise": "^4.2.4",
    "selenium-webdriver": "^3.6.0",
    "terser": "^5.34.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "prettier": "prettier --write \"**/*.js\"",
    "lint": "eslint --ext .js \"**/*.js\"",
    "lint:fix": "eslint --ext .js \"**/*.js\" --fix",
    "lint:report": "eslint --ext .js \"**/*.js\" --max-warnings 0 || true",
    "test": "node -r dotenv/config node_modules/mocha/bin/mocha --recursive t",
    "test:chrome": "USE_CHROME=1 node node_modules/mocha/bin/mocha --recursive t",
    "start:dev": "node bin/wwww",
    "carry-over-allowance": "node bin/calculate_carry_over_allowance_for_all_users.js",
    "compile-sass": "node node_modules/node-sass/bin/node-sass scss/main.scss build/css/style.css",
    "minify-css": "cleancss -o build/css/style.min.css build/css/style.css",
    "minify-js": "if [ -s public/js/global.js ]; then terser public/js/global.js -c -m -o build/js/global.min.js; else echo '// This file is intentionally left empty' > build/js/global.min.js; fi",
    "copy-static": "mkdir -p build/img build/fonts build/css build/js && cp -R public/img/* build/img/ 2>/dev/null || : && cp -R public/fonts/* build/fonts/ 2>/dev/null || : && cp -R public/css/*.css build/css/ 2>/dev/null || : && cp -R public/js/*.js build/js/ 2>/dev/null || :",
    "sync-to-public": "rm -rf public/* && cp -R build/* public/",
    "preinstall": "npx npm-force-resolutions",
    "prebuild": "npm run compile-sass && npm run minify-css && npm run minify-js && npm run copy-static && npm run sync-to-public",
    "build": "NODE_ENV=production npm run prebuild",
    "start": "NODE_ENV=production node bin/wwww"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "resolutions": {
    "graceful-fs": "4.2.11"
  }
}
